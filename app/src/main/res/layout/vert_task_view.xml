<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            app:contentPaddingTop="15dp"
            app:contentPaddingLeft="4dp"
            app:cardElevation="5dp"
            android:requiresFadingEdge="horizontal"
            app:cardCornerRadius="5dp"
            android:id="@+id/card_holder_horizontal"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="90"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_userId"
                    android:textSize="18sp"
                    app:fontFamily="serif"
                    android:text="this is a text title"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_title"
                    android:layout_below="@id/task_userId"
                    android:textSize="14sp"
                    android:text="this is a casual text description, that needs to be added "
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_state"
                    android:layout_below="@id/task_title"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_id"
                    android:layout_below="@id/task_id"
                    app:fontFamily="serif"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp"
                    android:textStyle="italic|bold"
            />

        </RelativeLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>